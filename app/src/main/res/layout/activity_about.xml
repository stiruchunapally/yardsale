<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_about"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sreekar.yardsale.AboutActivity">

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvAbout"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="#F6546A"
        tools:text="About"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/tvAbout">

    <TextView
        android:text="Money Raised:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvAbout"
        android:layout_alignParentStart="true"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#42cef4"
        android:layout_marginTop="27dp"
        android:id="@+id/tvMoneyRaisedText" />

    <TextView
        android:text="Money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:textSize="20dp"
        android:textColor="#42cef4"
        android:layout_toRightOf="@+id/tvmoneyraised"
        android:layout_alignParentStart="true"
        android:layout_marginTop="27dp"
        android:id="@+id/tvMoney" />
</LinearLayout>

</RelativeLayout>
